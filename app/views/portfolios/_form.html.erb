

<%= form_for(@portfolio_item) do |form| %>


  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Jordan Hudgens Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

<ul>
  <%= form.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
  <% end %>
</ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
